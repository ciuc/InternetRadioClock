<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:summary="%s"
        android:defaultValue="#00ff00"
        android:entries="@array/clock_colors"
        android:entryValues="@array/clock_color_codes"
        android:key="@string/setting.key.clockColor"
        android:title="@string/setting.name.clockColor" />

    <ListPreference
        android:summary="%s"
        android:defaultValue="@string/setting.default.clockSize"
        android:entries="@array/clock_human_sizes"
        android:entryValues="@array/clock_sizes"
        android:key="@string/setting.key.clockSize"
        android:title="@string/setting.name.clockSize" />
    <EditTextPreference
        android:key="@string/setting.key.sleepMinutes"
        android:title="@string/setting.name.sleepMinutes"
        android:summary="@string/setting.summary.sleepMinutes"
        android:inputType="number"/>
    <EditTextPreference
        android:key="@string/setting.key.snoozeMinutes"
        android:title="@string/setting.name.snoozeMinutes"
        android:summary="@string/setting.summary.snoozeMinutes"
        android:inputType="number"
        android:defaultValue="10"/>
    <SwitchPreference
        android:id="@+id/switch_display_seconds"
        android:key="@string/setting.key.seconds"
        android:title="@string/setting.name.seconds"
        android:summary="@string/setting.summary.seconds"
        android:defaultValue="true"
        />
    <SwitchPreference
        android:id="@+id/switch_enable_clock_move"
        android:key="@string/setting.key.clockMove"
        android:title="@string/setting.name.clockMove"
        android:summary="@string/setting.summary.clockMove"
        android:defaultValue="true"
        />
    <SwitchPreference
        android:id="@+id/switch_reverse_buttons"
        android:key="@string/setting.key.reverseButtons"
        android:title="@string/setting.name.reverseButtons"
        android:summary="@string/setting.summary.reverseButtons"
        android:defaultValue="false"
        />
    <SwitchPreference
        android:id="@+id/alarm_progressive_sound"
        android:key="@string/setting.key.alarmProgressiveSound"
        android:title="@string/setting.name.alarmProgressiveSound"
        android:summary="@string/setting.summary.alarmProgressiveSound"
        android:defaultValue="false"
        />
    <SwitchPreference
        android:id="@+id/play_at_start"
        android:key="@string/setting.key.playAtStart"
        android:title="@string/setting.name.playAtStart"
        android:summary="@string/setting.summary.playAtStart"
        android:defaultValue="false"
        />
</PreferenceScreen>