<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="5dp"
    android:layout_marginBottom="5pt"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="RockFM"
        android:textColor="@color/colorPrimaryDark" />
    <LinearLayout
        android:id="@+id/radio_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
    <TextView
        android:id="@+id/radio_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[FROM: Romania | IN: Romanian | PLAYING: Rock,Pop, indie rock, indie pop, alternative, contemproary]"
        android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
     <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/assign_to"
            android:textColor="#000000"/>
    <Button
        android:id="@+id/sf_assign_button_stream1"
        style="?metaButtonBarButtonStyle"
        android:layout_width="@dimen/streamFinder.button"
        android:layout_height="@dimen/streamFinder.button"
        android:layout_marginLeft="15dp"
        android:text="@string/button.name.stream1"
        android:clickable="false"
        android:background="@drawable/memory"
        android:textColor="@color/button.color.off" />
    <Button
        android:id="@+id/sf_assign_button_stream2"
        style="?metaButtonBarButtonStyle"
        android:layout_width="@dimen/streamFinder.button"
        android:layout_height="@dimen/streamFinder.button"
        android:layout_marginLeft="5dp"
        android:text="@string/button.name.stream2"
        android:clickable="false"
        android:background="@drawable/memory"
        android:textColor="@color/button.color.off" />
    <Button
        android:id="@+id/sf_assign_button_stream3"
        style="?metaButtonBarButtonStyle"
        android:layout_width="@dimen/streamFinder.button"
        android:layout_height="@dimen/streamFinder.button"
        android:layout_marginLeft="5dp"
        android:text="@string/button.name.stream3"
        android:clickable="false"
        android:background="@drawable/memory"
        android:textColor="@color/button.color.off" />
        <Button
            android:id="@+id/sf_assign_button_stream4"
            style="?metaButtonBarButtonStyle"
            android:layout_width="@dimen/streamFinder.button"
            android:layout_height="@dimen/streamFinder.button"
            android:layout_marginLeft="5dp"
            android:text="@string/button.name.stream4"
            android:clickable="false"
            android:background="@drawable/memory"
            android:textColor="@color/button.color.off" />
        <Button
            android:id="@+id/sf_assign_button_stream5"
            style="?metaButtonBarButtonStyle"
            android:layout_width="@dimen/streamFinder.button"
            android:layout_height="@dimen/streamFinder.button"
            android:layout_marginLeft="5dp"
            android:text="@string/button.name.stream5"
            android:clickable="false"
            android:background="@drawable/memory"
            android:textColor="@color/button.color.off" />
        <Button
            android:id="@+id/sf_assign_button_stream6"
            style="?metaButtonBarButtonStyle"
            android:layout_width="@dimen/streamFinder.button"
            android:layout_height="@dimen/streamFinder.button"
            android:layout_marginLeft="5dp"
            android:text="@string/button.name.stream6"
            android:clickable="false"
            android:background="@drawable/memory"
            android:textColor="@color/button.color.off" />
        <Button
            android:id="@+id/sf_assign_button_stream7"
            style="?metaButtonBarButtonStyle"
            android:layout_width="@dimen/streamFinder.button"
            android:layout_height="@dimen/streamFinder.button"
            android:layout_marginLeft="5dp"
            android:text="@string/button.name.stream7"
            android:clickable="false"
            android:background="@drawable/memory"
            android:textColor="@color/button.color.off" />
        <Button
            android:id="@+id/sf_assign_button_stream8"
            style="?metaButtonBarButtonStyle"
            android:layout_width="@dimen/streamFinder.button"
            android:layout_height="@dimen/streamFinder.button"
            android:layout_marginLeft="5dp"
            android:text="@string/button.name.stream8"
            android:clickable="false"
            android:background="@drawable/memory"
            android:textColor="@color/button.color.off" />
    </LinearLayout>
</LinearLayout>